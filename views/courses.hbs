<h1>Курсы</h1>

{{#if course.length}}

    {{#each course}}
        <div class='row'>
            <div class='col s6 offset-s3'>
                <div class='card'>
                    <div class='card-image'>
                        <img src='/{{img}}' alt='{{title}}' />
                    </div>
                    <div class='card-content'>
                        <span class='card-title'>{{title}}</span>
                        <p class='price'>{{price}}</p>
                    </div>
                    <div class='card-action carder'>
                        <a href='/courses/{{id}}'>Открыть курс</a>
                        {{#if @root.isAuth}}
                            {{#ifCond @root.userID userID}}
                                <a href='/courses/{{id}}/edit?allow=true'>Редактировать курс</a>
                            {{/ifCond}}
                        {{/if}}
                        <form action='/card/add' method='POST'>
                            <input type='hidden' name='id' value='{{id}}' />
                            <input type='hidden' name='_csrf' value='{{@root.csrf}}' />

                            <button type='submit' class='btn btn-primary right'>Купить</button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    {{/each}}
{{else}}
    <p>Курсов пока нет</p>
{{/if}}