<h1>Корзина</h1>

<div id='card'>
    {{#if card.length}}

        <table>
            <thead>
                <tr>
                    <th>Навзание</th>
                    <th>Количество</th>
                    <th>Действия</th>
                </tr>
            </thead>
            <tbody>

                {{#each card}}
                    <tr>
                        <td>{{courseID.title}}</td>
                        <td>{{count}}</td>
                        <td>
                            <button class='btn btn-small js-remove red' data-id='{{courseID._id}}' data-csrf='{{@root.csrf}}'>Удалить</button>
                        </td>
                    </tr>
                {{/each}}
            </tbody>
        </table>

        <p><strong>Цена:</strong> <span class='price'>{{price}}</span></p>

        <form action='/orders' method='POST'>
            <input type='hidden' name='_csrf' value='{{@root.csrf}}' />

            <button type='submit' class='btn btn-primary'>Сделать заказ</button>
        </form>

    {{else}}
        <p>Корзина пуста</p>
    {{/if}}
</div>