<div class='upmarg'>
    <div class='row'>
        <div class='col s12'>
            <ul class='tabs'>
                <li class='tab col s6 offset-s3'><a class='active' href=''>Востановление акаунта</a></li>
            </ul>
        </div>
        <form action='/auth/resetpassword/{{token}}' method='POST'>

            <div id='resetpass' class='col s12'>
                <div class='input-field'>
                    <input id='password' name='password' type='password' class='validate' required value='' />
                    <label for='password'>Пароль</label>
                    <span id='helper-password' class='helper-text' data-error='Введите пароль'></span>
                </div>
                <div class='input-field'>
                    <input id='confirm' name='confirm' type='password' class='validate' />
                    <label for='confirm'>Пароль повторно:</label>
                    <span id='helper-confirm' class='helper-text' data-error='Введите пароль еще раз'></span>
                </div>
                <input type='hidden' name='_csrf' value='{{@root.csrf}}' />
                <button type='button' class='btn btn-primary'>Дале</button>
            </div>

        </form>
    </div>
</div>