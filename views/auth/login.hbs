<div class='upmarg'>
    <div class='row'>
        <div class='col s12'>
            <ul class='tabs'>
                <li class='tab col s6 offset-s3'><a class='active' href='/auth/login'>Войти</a></li>
            </ul>
        </div>
        <div id='login' class='col s12'>

            <div class='input-field'>
                <input id='email' name='email' type='text' class='validate' required value='' />
                <label for='email'>Email</label>
                <span id='helper-email' class='helper-text' data-error='Введите email'></span>
            </div>

            <div class='input-field'>
                <input id='password' name='password' type='password' class='validate' required value='' />
                <label for='password'>Пароль</label>
                <span id='helper-password' class='helper-text' data-error='Введите пароль'></span>
                <a href='/auth/resetpassword' class='right'>Забыли пароль?</a>
            </div>
            <input type='hidden' id='csrf' name='_csrf' value='{{@root.csrf}}' />

            <button type='submit' class='btn btn-primary'>Войти</button>
        </div>
    </div>
</div>